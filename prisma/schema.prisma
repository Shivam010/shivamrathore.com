generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

model stats {
    slug  String @id @db.VarChar(128)
    count BigInt @default(1)
    likes BigInt @default(0)
}

model Account {
    id                String  @id
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.VarChar(2000)
    access_token      String? @db.VarChar(2000)
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.VarChar(2000)
    session_state     String? @db.VarChar(2000)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id
    sessionToken String   @unique
    userId       String
    expires      DateTime

    @@index([userId])
}

model User {
    id             String    @id
    name           String?
    email          String?   @unique
    emailVerified  DateTime?
    image          String?
    allowedActions String?
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model fake {
    id BigInt @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
}
